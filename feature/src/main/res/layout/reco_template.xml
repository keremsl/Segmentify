<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/templateRecoCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/templateReco"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="7dp"
        app:cardPreventCornerOverlap="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_linear_scale_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="127dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reco_pc_vector"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reco_tablet"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reco_phone"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="39dp"
            />
        <TextView
            android:id="@+id/txt_recoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07.12.2018"
            android:textColor="#bababa"
            android:fontFamily="@font/mont"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            />
        <com.github.angads25.toggle.LabeledSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_recoPageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Page - scn34141134"
            android:fontFamily="@font/mont"
            android:textSize="15dp"
            android:layout_margin="20dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_recoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected For You"
            android:fontFamily="@font/mont"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"

            />




    </android.support.v7.widget.CardView>

</LinearLayout>
