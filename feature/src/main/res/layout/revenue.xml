<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:actionBarNavMode="tabs"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#49b4d3"
        >
        <ImageView
            android:id="@+id/info_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_icon"
            android:layout_gravity="right"
            android:padding="15dp"
            android:contentDescription="infoRevenue"
            />
        <ImageView
            android:layout_width="1100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/waves"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Revenue"
            android:textSize="28sp"
            android:paddingBottom="20dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="0"
            android:textSize="25dp"
            android:paddingTop="45dp"
            android:layout_gravity="start"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_View_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EUR"
            android:textSize="16dp"
            android:paddingTop="80dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="0"
            android:textSize="25dp"
            android:paddingTop="45dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_View_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Purchases"
            android:textSize="16dp"
            android:paddingTop="80dp"
            android:layout_gravity="start"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_Imp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="0 "
            android:textSize="25dp"
            android:layout_gravity="end"
            android:paddingTop="45dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_Imp_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Purchased\nProducts"
            android:textSize="16dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingTop="80dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_Imp_Rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Contribution Ratio"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:paddingTop="140dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Widget_Imp_Rate_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="%0.0"
            android:textSize="28dp"
            android:layout_gravity="right"
            android:paddingTop="135dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/mont"
            />

    </android.support.v7.widget.CardView>



</RelativeLayout>